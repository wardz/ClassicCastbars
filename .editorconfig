# Top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.sh]
end_of_line = lf

[*.{lua,xml,luacheckrc}]
indent_style = space
indent_size = 4

# Ignore paths
[/ClassicCastbars_Options/Libs/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
